= form_for @target do |f|
  - if @target.errors.any?
    #error_explanation
      %h2= "#{pluralize(@target.errors.count, "error")} prohibited this target from being saved:"
      %ul
        - @target.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :wb_uid, '微博 ID'
    = f.text_field :wb_uid
    = f.hidden_field :user_id
  .actions
    = f.submit '确认无误，提交'
